<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b2836"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="50dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow-Up Assistance"
            android:textSize="26sp"
            android:textColor="#FFDE59"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with support organizations"
            android:textSize="16sp"
            android:textColor="#B0C4DE"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="25dp"
            android:textAlignment="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orgRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:clipToPadding="false"
            android:paddingStart="40dp"
            android:paddingEnd="40dp" />

        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/lawyerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Lawyer cards will be added dynamically -->
        </LinearLayout>

    </LinearLayout>

</ScrollView>