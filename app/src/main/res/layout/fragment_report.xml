<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b2836"
    android:padding="18dp"
    tools:context=".ui.ReportFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/banner_gradient"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_shield"
            app:tint="#ffd02b"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/reportTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit a Report"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Report Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textColorHint="#88ffffff"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:background="@drawable/edittext_bg"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/reportDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe your issue..."
                android:textColorHint="#88ffffff"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:background="@drawable/edittext_bg"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:gravity="top"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitReportButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT REPORT"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#0b2836"
        android:backgroundTint="#ffd02b"
        app:cornerRadius="12dp"
        android:elevation="6dp"
        android:padding="14dp" />

</LinearLayout>
