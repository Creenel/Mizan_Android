<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/mizan_blue">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#6495ED" />

                <ImageView
                    android:id="@+id/icon_shield"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shield"
                    app:tint="@color/mizan_yellow" />
            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report a Crime"
                android:textColor="@color/mizan_yellow"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your report helps us make a difference. Please fill out the details below."
                android:textColor="#99A3B0"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

        <!-- Form Card -->
        <LinearLayout
            android:id="@+id/card"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6495ED"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Crime Type -->
            <TextView
                android:id="@+id/label_crime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Crime"
                android:textColor="@color/mizan_yellow"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinner_crime_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3" />

            <!-- Description -->
            <TextView
                android:id="@+id/label_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/mizan_yellow"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add details (What happened? Where? How?)"
                android:background="#d3d3d3"
                android:textColorHint="#B5B9C7"
                android:minLines="4"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/mizan_yellow"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:background="#d3d3d3"
                android:textColorHint="#B5B9C7"
                android:textColor="@android:color/black"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginTop="4dp" />

            <!-- Anonymous checkbox -->
            <CheckBox
                android:id="@+id/checkbox_anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Anonymously"
                android:textColor="@color/mizan_yellow"
                android:layout_marginTop="12dp" />

            <!-- Location & Attachments buttons -->
            <LinearLayout
                android:id="@+id/buttons_parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Location"
                    android:backgroundTint="@color/mizan_yellow"
                    android:textColor="@color/mizan_blue"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_attachments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Files"
                    android:backgroundTint="@color/mizan_yellow"
                    android:textColor="@color/mizan_blue"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Location pill (optional display) -->
            <TextView
                android:id="@+id/text_location_pill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:background="#d3d3d3"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/mizan_yellow"
                android:textSize="13sp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Report"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/mizan_yellow"
                android:textColor="@color/mizan_blue"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
